@model HenkiloDeleteViewModel

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Etusivu</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Henkilöt</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Poista henkilön tiedot</li>
                </ol>
            </nav><br /><br />
            <h2 style="color:red"> Poistetaan henkilöä. Oletko varma ?</h2>
            <form method="post" enctype="multipart/form-data" asp-action="Delete">
                <div class="form-group">
                    <input asp-for="Kokonimi" class="form-control font-weight-bolder" readonly style="background-color: #293043" />
                </div>

                <div class="form-group">

                    <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Poista</button>
                    <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Peruuta</a>
                    <br />
                    <br />
                    <br />

                </div>
            </form>
        </div>
    </div>
</div>
